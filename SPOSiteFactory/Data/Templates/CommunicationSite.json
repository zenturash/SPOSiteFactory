      "language"
    ],
    "allowedTemplates": [
      "SITEPAGEPUBLISHING#0"
    ],
    "storageQuotaLimits": {
      "minimum": 500,
      "maximum": 25000
    }
  },
  "deploymentSettings": {
    "waitForProvisioning": true,
    "timeoutMinutes": 15,
    "retryAttempts": 3,
    "validateAfterCreation": true,
    "enableDiagnostics": true,
    "postProvisioningActions": [
      "ConfigureNewsWebPart",
      "SetupDefaultPages",
      "ConfigureNavigation"
    ]
  },
  "metadata": {
